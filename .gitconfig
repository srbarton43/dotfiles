[init]
  defaultBranch = main

[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"

[merge]
  tool = nvim

[mergetool]
  prompt = false
  keepBackup = false

[core]
  pager = delta
  excludesFile = ~/.dotfiles/.gitignore
  editor = nvim

[alias]
  root = rev-parse --show-toplevel
