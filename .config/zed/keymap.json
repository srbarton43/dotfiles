[
  {
    "bindings": {
      "tab": "menu::SelectNext",
      "shift-tab": "menu::SelectPrevious",
      "ctrl-shift-h": "pane::ActivatePreviousItem",
      "ctrl-shift-l": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-s": "workspace::Save"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // switch to normal mode using "jk" or "kj"
      "j k": "vim::NormalBefore",
      "k j": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      // diagnostics
      "] d": "editor::GoToDiagnostic",
      "[ d": "editor::GoToPreviousDiagnostic",

      // move between panes and tabs
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrevious"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "alt-b": "workspace::ToggleRightDock",
      "alt-r": "workspace::ToggleLeftDock",
      "alt-j": "workspace::ToggleBottomDock"
    }
  }
]
