// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "auto_update_extensions": {
    "vhdl": false
  },
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": false
  },
  "vim_mode": true,
  "theme": "Monokai",
  "ui_font_size": 16,
  "buffer_font_size": 12,
  "buffer_font_family": "Monaco Nerd Font Mono",
  "buffer_font_features": {
    // Disable ligatures:
    "calt": false
  },
  "relative_line_numbers": true,
  "file_scan_exclusions": ["**/.cache"],
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "tab_size": 2,
  "terminal": { "shell": { "program": "fish" } },
  "telemetry": { "diagnostics": false, "metrics": false },
  "project_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  },
  "assistant_v2": {
    "enabled": false,
    "button": false
  },
  "chat_panel": { "button": "never", "dock": "left" },
  "assistant": {
    "version": "2",
    "enabled": false,
    "dock": "left",
    "button": false
  },
  "auto_update": false,
  "languages": {
    "VHDL": {
      "tab_size": 4
    },
    "Rust": { "tab_size": 4 },
    "JSON": { "show_edit_predictions": false },
    "JSONC": { "show_edit_predictions": false }
  }
}
