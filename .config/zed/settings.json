// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "copilot": false
  },
  "vim_mode": true,
  "theme": "Atelier Seaside Light",
  "ui_font_size": 16,
  "buffer_font_size": 12,
  "buffer_font_family": "Monaco",
  "buffer_font_features": {
    // Disable ligatures:
    "calt": false
  },
  "relative_line_numbers": true,
  "file_scan_exclusions": ["**/.cache"],
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "tab_size": 2,
  "terminal": { "shell": { "program": "fish" } },
  "telemetry": { "diagnostics": false, "metrics": false },
  "project_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  },
  "assistant_v2": {
    "enabled": false,
    "button": false
  },
  "chat_panel": { "button": false, "dock": "left" },
  "assistant": {
    "version": "1",
    "enabled": false,
    "dock": "left",
    "button": false
  }
}
